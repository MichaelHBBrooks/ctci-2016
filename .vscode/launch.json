	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run NPM dev",
			"command": "npm run dev",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Test TS Script",
			"program": "${workspaceFolder}/src/index.ts",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"cwd": "${workspaceFolder}/dist",
			"outputCapture": "std",
			"preLaunchTask": "NPM Dev",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"]
		},
		{
			"name": "Mocha",
			"program": "${workspaceFolder}/src/index.ts",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"cwd": "${workspaceFolder}/dist",
			"outputCapture": "std",
			"preLaunchTask": "NPM Mocha",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"]
		}
	]
}
